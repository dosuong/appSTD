<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Account.account_main">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="136dp"
                android:layout_height="112dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                app:srcCompat="@drawable/ic_logo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/general_border_radius"
                android:orientation="vertical"
                android:padding="10dp"
                android:weightSum="100">

                <TextView
                    android:id="@+id/textView27"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Thông tin tài khoản"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <TextView
                        android:id="@+id/textView55"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="30"
                        android:padding="5dp"
                        android:text="Họ và Tên:"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/txtVNameUser"
                        android:layout_width="210dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="70"
                        android:padding="5dp"
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <TextView
                        android:id="@+id/textView56"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="30"
                        android:padding="5dp"
                        android:text="Tên Tài Khoản:"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/txtCodeUser"
                        android:layout_width="210dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="70"
                        android:padding="5dp"
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <TextView
                        android:id="@+id/textView57"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="30"
                        android:padding="5dp"
                        android:text="Lớp:"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/txtClassUser"
                        android:layout_width="210dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="70"
                        android:padding="5dp"
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <TextView
                        android:id="@+id/textView58"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="30"
                        android:padding="5dp"
                        android:text="Giới Tính:"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/txtGenderUser"
                        android:layout_width="210dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="70"
                        android:padding="5dp"
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <TextView
                        android:id="@+id/textView59"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="30"
                        android:padding="5dp"
                        android:text="Ngày Sinh:"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/txtBrithUser"
                        android:layout_width="210dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="70"
                        android:padding="5dp"
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <TextView
                        android:id="@+id/textView61"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="30"
                        android:padding="5dp"
                        android:text="Chức Vụ:"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/txtVNamePosition"
                        android:layout_width="210dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="70"
                        android:padding="5dp"
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/general_border_radius"
                android:orientation="horizontal"
                android:padding="10dp"
                android:weightSum="100">

                <TextView
                    android:id="@+id/textView31"
                    android:layout_width="347dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="85"
                    android:text="Điều khoản sử dụng"
                    android:textColor="@color/black"
                    android:textSize="22sp" />

                <ImageView
                    android:id="@+id/imgBtnTerm"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="10"
                    app:srcCompat="@drawable/ic_chevron_right_24" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/general_border_radius"
                android:orientation="horizontal"
                android:padding="10dp"
                android:weightSum="100">

                <TextView
                    android:id="@+id/textView34"
                    android:layout_width="349dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="85"
                    android:text="Chính sách quyền riêng tư"
                    android:textColor="@color/black"
                    android:textSize="22sp" />

                <ImageView
                    android:id="@+id/imgBtnPcy"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="10"
                    app:srcCompat="@drawable/ic_chevron_right_24" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutMistakeEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/general_border_radius"
                android:orientation="horizontal"
                android:padding="10dp"
                android:weightSum="100">

                <TextView
                    android:id="@+id/textView31g"
                    android:layout_width="347dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="85"
                    android:text="Tùy chỉnh vi phạm"
                    android:textColor="@color/black"
                    android:textSize="22sp" />

                <ImageView
                    android:id="@+id/imgTd"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="10"
                    app:srcCompat="@drawable/ic_chevron_right_24" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutChangePass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/general_border_radius"
                android:orientation="horizontal"
                android:padding="10dp"
                android:weightSum="100">

                <TextView
                    android:id="@+id/textView35"
                    android:layout_width="352dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="85"
                    android:text="Đổi mật khẩu"
                    android:textColor="@color/black"
                    android:textSize="22sp" />

                <ImageView
                    android:id="@+id/imgBtnChagePass"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="10"
                    app:srcCompat="@drawable/ic_chevron_right_24" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnListAcc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:layout_weight="50"
                    android:backgroundTint="#38B6FF"
                    android:padding="5dp"
                    android:text="DS tài khoản"
                    android:textColor="@color/white"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/btnLogOut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:layout_weight="50"
                    android:backgroundTint="#FF0000"
                    android:padding="5dp"
                    android:text="Đăng xuất"
                    android:textColor="@color/white" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>